import seaborn as sns
import matplotlib.pyplot as plt

# Create an 8x8 matrix (you can replace this with your own data)
data = [[1, 2, 3, 4, 5, 6, 7, 8],
        [2, 3, 4, 5, 6, 7, 8, 9],
        [3, 4, 5, 6, 7, 8, 9, 10],
        [4, 5, 6, 7, 8, 9, 10, 11],
        [5, 6, 7, 8, 9, 10, 11, 12],
        [6, 7, 8, 9, 10, 11, 12, 13],
        [7, 8, 9, 10, 11, 12, 13, 14],
        [8, 9, 10, 11, 12, 13, 14, 15]]

# Create a heatmap using Seaborn
sns.heatmap(data, cmap="YlGnBu", annot=True, fmt="d", linewidths=.5, square=True, cbar_kws={"shrink": 0.8})

# Show the plot
plt.show()
#%%
import seaborn as sns
import matplotlib.pyplot as plt

#Create an initial 8x8 matrix
matrix = [
    [1, 2, 3, 4, 5, 6, 7, 8],
    [2, 3, 4, 5, 6, 7, 8, 9],
    [3, 4, 5, 6, 7, 8, 9, 10],
    [4, 5, 6, 7, 8, 9, 10, 11],
    [5, 6, 7, 8, 9, 10, 11, 12],
    [6, 7, 8, 9, 10, 11, 12, 13],
    [7, 8, 9, 10, 11, 12, 13, 14],
    [8, 9, 10, 11, 12, 13, 14, 15]
]


for i in range(1, 6, 2):
  # Define the new value
  for j in range(1, 6, 2):
    new_value_i = (i+j)*5

    # Modify the specified submatrix
    for row in range(i, i + 2):
      for col in range(j, j + 2):
        matrix[row][col] = new_value_i

#Print the modified matrix
for row in matrix:
    print(row)

#Plot the heatmap
sns.heatmap(matrix, cmap="YlGnBu", annot=True, fmt="d", linewidths=.5, square=True, cbar_kws={"shrink": 0.8})

#Show the plot
plt.show()

